{
  "extends": [
    "../tslint.base.json",
    "tslint-react"
  ],
  "rulesDirectory": [
    "node_modules/tslint-microsoft-contrib"
  ],
  "rules": {
    // Override base rules here
    // We need to use floating promises within React hooks
    "no-floating-promises": false,
    // Set tslint-react rules here
    "jsx-no-multiline-js": false,
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "jsx-no-lambda": true,
    "jsx-space-before-trailing-slash": true,
    "jsx-wrap-multiline": false,
    "jsx-key": true,
    "jsx-no-bind": true,
    "jsx-curly-spacing": [
      true,
      "never"
    ],
    // Set tslint-microsoft-contrib rules here
    "react-unused-props-and-state": true,
    "react-anchor-blank-noopener": true,
    "react-this-binding-issue": true
  }
}
